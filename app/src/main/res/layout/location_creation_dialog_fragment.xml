<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/entry_latitude"
        android:padding="10dp"/>

    <pl.dawidgdanski.compass.ui.view.CoordinateEntry
        android:id="@+id/dialog_latitude_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/entry_longitude"
        android:padding="10dp"/>

    <pl.dawidgdanski.compass.ui.view.CoordinateEntry
        android:id="@+id/dialog_longitude_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>